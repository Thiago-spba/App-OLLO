# OLLO - Configurações de CORS
# Este arquivo configura as regras de CORS para garantir acesso apropriado
# às APIs e recursos da aplicação

<IfModule mod_headers.c>
    # Habilitar CORS para todos os domínios permitidos
    Header set Access-Control-Allow-Origin "https://olloapp.com.br, https://olloapp-egl2025.web.app, http://localhost:5173, http://localhost:5174, http://localhost:5175, http://localhost:5176, http://localhost:5177"
    Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, PATCH"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, Accept, Origin, Access-Control-Request-Method, Access-Control-Request-Headers"
    Header set Access-Control-Allow-Credentials "true"
    Header set Access-Control-Max-Age "3600"
    
    # Responder imediatamente a preflight requests
    RewriteEngine On
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>

# Configurações de segurança
<IfModule mod_headers.c>
    # Proteger contra clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    
    # Habilitar proteção XSS para navegadores modernos
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevenir MIME-type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Política de segurança de conteúdo (CSP)
    # Ajuste de acordo com as necessidades do seu aplicativo
    Header set Content-Security-Policy "default-src 'self' https://*.firebaseapp.com https://*.googleapis.com; img-src 'self' data: https://*.firebaseapp.com https://*.googleapis.com; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' https://*.firebaseapp.com https://*.googleapis.com; connect-src 'self' https://*.firebaseapp.com https://*.googleapis.com wss://*.firebaseio.com;"
</IfModule>

# Reescrever URLs para SPA (Single Page Application)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    RewriteRule ^index\.html$ - [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /index.html [L]
</IfModule>
